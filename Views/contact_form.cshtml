@{
  Layout="Shared/_Layout.cshtml";
}

<h1>Enter a new contact:</h1>
<form action="/contact/new" method="post">
  <label for="new-name">Contact name: </label>
  <input id="new-name" name="new-name" type="text">
  <label for="new-phone-number">Contact phone number: </label>
  <input id="new-phone-number" name="new-phone-number" type="text">
  <label for="new-address">Contact Address: <label>
  <input id="new-address" name="new-address" type="text">
  <button type="submit" class="btn btn-success">Add</button>
</form>

<p><a href="/">Return to home page/contact list</a></p>
