@{
  Layout="Shared/_Layout.cshtml";
}

<h1>Contacts</h1>

@if(@Model.Count == 0)
{
  <h3 class="contact-list">No contacts have been added yet!</h3>
}

@foreach (var person in Model)
{
  <img src="http://www.ucdenver.edu/email/PublishingImages/cloud/OABlogo.png" class="book-image"><h3 class="contact-list"><a class="contact-list" href='/contact/@person.GetId()'>@person.GetName()</a></h3>
}

<p><a href="/contact/add" class="link">Add a new contact</a></p>

<p><a href="/contact/search" class="link">Search for a contact</a></p>

<form method="post" action="/contacts/clear">
  <button type="submit" class="btn btn-warning">Clear Contacts</button>
</form>
