<h1>Contacts</h1>

@if(@Model.Count == 0)
{
  <h3>No contacts have been added yet!</h3>
}

@foreach (var person in Model)
{
  <h3><a href="/contact/@person.GetId()">@person.GetName()</a></h3>
}

<p><a href="/contact/add">Add a new contact</a></p>

<form method="post" action="/contacts/clear">
  <button type="submit" class="btn btn-warning">Clear</button>
</form>
